@import "../../../style/swiper.wxss";
.total_car{
  background: #f3eff1;
}
.total_car_flex {
  margin-top: 5px;
}
.total_car_view {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: white;
  margin-top:10px;
  border-bottom: 1px solid #A9A9A9;
}
.backg_white {
  padding: 10px 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.total_car_image{
  width: 240rpx;
  height: 240rpx;
  float: right;
}
.total_car_image>image {
  width: 100%;
  height: 100%;
}
.total_car_title{
  padding-top: 10rpx;
  width: 65%; 
  margin-right: 10px;
}
.total_car_intro{
  padding-top:10rpx;
  font-size:15px;
}